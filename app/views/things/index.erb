<h2>Things</h2>

<ul>
  <% @things.each do |thing| %>
    <li>
      <p>
        <a href="/things/<%= "#{thing.id}" %>" ><%= thing.name %></a>
      </p>
      <p class="attribution">
        <!-- I think I should refactor this using #includes or #joins in the controller,
        to eliminate database calls here, but I am not sure which to use or how to use it -->
        Used by <a href="/users/<%= "#{thing.user.id}" %>"><%= thing.user.username %></a> on <%= long_form_date(thing.created_at) %>
      </p>
    </li>
  <% end %>
</ul>

<% if logged_in? %>
  <a href="/things/new">Create a new post</a>
<% end %>
